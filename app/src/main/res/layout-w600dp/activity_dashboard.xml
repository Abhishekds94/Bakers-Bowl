<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C72C2F"
    android:id="@+id/app_tablet">



    <RelativeLayout
        android:id="@+id/dashboard_top"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/splash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/grandhotel_regular"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:fontFamily="@font/grand_hotel" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipe_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dashboard_top"
        android:background="#EDFDFCFC"
        app:spanCount="2">

    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>