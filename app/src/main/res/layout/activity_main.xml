<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/splash_top"
        android:background="@drawable/patch"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="48">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/splash"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_top"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/grandhotel_regular"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:fontFamily="@font/grand_hotel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A project of Udacity Nano Degree Course"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>